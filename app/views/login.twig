{% extends "base.twig" %}

{% block title %}Login{% endblock %}
{% block head %}
    {{ parent() }}
    <link href='http://fonts.googleapis.com/css?family=Open+Sans+Condensed:300' rel='stylesheet' type='text/css'>
    <style type="text/css">
        body{
            text-align: center;
            text-shadow: 0 1px 0 rgba(0,0,0,.1);
            background-color: #6f5499;
            font-family: 'Open Sans Condensed', sans-serif;;
        }
        #footer {
            position: fixed;
            bottom: 0;
            color: #fff;
            padding: 20px 50px;
            text-align: right;
            width: 100%;
            box-sizing: border-box;
            font-size: 1.2em;
        }
        #footer a{
            color: #333333;
            font-weight: bold;
        }
        #footer a:hover{
            color: #d44950;
        }
        .login-block a{
            display: block;
            padding-bottom: 20px;
        }
        .login-block h1{
            color: #fff;
        }
        img{
            height: 50px;
            width: auto;
        }
        .login-block {
            box-sizing: border-box;
            width: 300px;
            margin: 80px auto;
            background: blue;
            padding: 30px 30px;
            background-color: #243742;
            border-radius: 3px;
        }
    </style>
{% endblock %}
{% block content %}
    <div class="login-block">
        <h1>Login</h1>
        <a href="/auth/facebook"><img src="images/fb.png" alt="facebook login" /></a>
        <a href="/auth/google"><img src="images/gplus.png" alt="google+ login" /></a>        
    </div>
{% endblock %}